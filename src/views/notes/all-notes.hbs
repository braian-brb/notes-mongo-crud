<div class="row">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card-body bg-dark">
            <h4 class="card-title d-flex justify-content-between align-items-center">
                {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
            </h4>
            <p>{{description}}</p>
            <form action="/notes/delete/{{_id}}" method="POST">
                <button type="submit" class="btn btn-danger btn-sm btn-block w-100">
                    Delete
                </button>
            </form>
        </div>
    </div>
    {{/each}}
</div>